<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- disabled state -->
  <item android:state_enabled="false">
    <shape android:innerRadiusRatio="2"
       android:shape="ring"
       android:thickness="0dp"
       android:useLevel="false" >
      <solid android:color="#e1e1e1" />
      <size android:height="22dp" android:width="22dp" />
      <stroke android:color="#a5a5a5" android:width="2dp"/>
    </shape>
  </item>

  <!-- enabled and pressed state -->
  <item android:state_enabled="true" android:state_pressed="true" android:state_checked="false" android:drawable="@drawable/RadioShapeBorder"/>
  
  <!-- enabled state -->
  <item android:state_enabled="true" android:state_checked="false" android:drawable="@drawable/RadioShapeBorder"/>

  <!-- enabled state -->
  <item android:state_enabled="true" android:state_checked="true">
    <layer-list >
      <item android:drawable="@drawable/RadioShapeBorder"/>
      <item android:drawable="@drawable/RadioShapeToggle"/>
    </layer-list>
  </item>
</selector>
