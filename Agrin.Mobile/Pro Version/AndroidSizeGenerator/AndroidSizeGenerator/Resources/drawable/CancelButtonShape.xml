<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- disabled state -->
  <item android:state_enabled="false">
    <shape android:shape="rectangle" >
      <corners android:radius="6dp"/>
      <solid android:color="#dadada"/>
      <stroke android:width="1dp" android:color="#9e9e9e"/>
    </shape>
  </item>

  <!-- enabled and pressed state -->
  <item android:state_enabled="true" android:state_pressed="true">
    <shape android:shape="rectangle" >
      <corners android:radius="6dp"/>
      <solid android:color="#e2bcbc"/>
      <stroke android:width="1dp" android:color="#9e9e9e"/>
    </shape>
  </item>

  <!-- enabled and focused state -->
  <item android:state_enabled="true" android:state_focused="true">
    <shape android:shape="rectangle" >
      <corners android:radius="6dp"/>
      <gradient android:angle="90" android:startColor="#c85c47" android:endColor="#ec8d6c" android:type="linear"/>
      <stroke android:width="1dp" android:color="#9e9e9e"/>
    </shape>
  </item>

  <!-- enabled state -->
  <item android:state_enabled="true">
    <shape android:shape="rectangle" >
      <corners android:radius="6dp"/>
      <gradient android:angle="90" android:startColor="#c85c47" android:endColor="#ec8d6c" android:type="linear"/>
      <stroke android:width="1dp" android:color="#9e9e9e"/>
    </shape>
  </item>

</selector>