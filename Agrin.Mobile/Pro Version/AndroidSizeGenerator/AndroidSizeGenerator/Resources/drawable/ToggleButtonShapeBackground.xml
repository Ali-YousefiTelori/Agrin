<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- disabled state -->
  <item android:state_enabled="false">
    <shape android:shape="rectangle" >
      <corners android:radius="6dp"/>
      <solid android:color="#dadada"/>
      <stroke android:width="1dp" android:color="#9e9e9e"/>
    </shape>
  </item>

  <!-- enabled and pressed state -->
  <item android:state_enabled="true" android:state_pressed="true" android:state_checked="false">
    <shape android:shape="rectangle" >
      <corners android:radius="6dp"/>
      <gradient android:angle="90" android:startColor="#56b5dc" android:endColor="#217895" android:type="linear"/>
      <stroke android:width="1dp" android:color="#5e5e5e"/>
    </shape>
  </item>

  <!-- enabled state -->
  <item android:state_enabled="true" android:state_checked="false">
    <shape android:shape="rectangle" >
      <corners android:radius="6dp"/>
      <gradient android:angle="90" android:startColor="#99c847" android:endColor="#BDEC6C" android:type="linear"/>
      <stroke android:width="1dp" android:color="#9e9e9e"/>
    </shape>
  </item>

  <!-- enabled state -->
  <item android:state_enabled="true" android:state_checked="true">
    <shape android:shape="rectangle" >
      <corners android:radius="6dp"/>
      <gradient android:angle="90" android:startColor="#56b5dc" android:endColor="#217895" android:type="linear"/>
      <stroke android:width="1dp" android:color="#5e5e5e"/>
    </shape>
  </item>
</selector>