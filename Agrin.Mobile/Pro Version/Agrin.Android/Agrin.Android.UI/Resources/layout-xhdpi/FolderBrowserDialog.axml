<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:minHeight="200dp"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+FolderBrowserDialog/LinearLayoutReverce1">
        <EditText
            android:id="@+FolderBrowserDialog/txt_GoPath"
            style="@style/editText"
            android:layout_marginRight="5dp" />
        <Button
            android:id="@+FolderBrowserDialog/btnGo"
            style="@style/btn_stand"
            android:layout_weight="0"
            android:text="Go_Language"
            android:minWidth="60dp" 
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+FolderBrowserDialog/btnSelectDataFolder"
            style="@style/btn_stand"
            android:layout_weight="0"
            android:text="DataPath_Language"
            android:minWidth="60dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <GridView
            android:columnWidth="@dimen/folderSize"
            android:numColumns="auto_fit"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:stretchMode="columnWidth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+FolderBrowserDialog/mainGridView"
            android:layout_margin="5dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+FolderBrowserDialog/LinearLayoutReverce2"
        android:layout_marginBottom="5dip">
        <Button
            android:text="Select_Language"
            android:id="@+FolderBrowserDialog/btnSelect"
            style="@style/btn_stand" />
        <Button
            android:text="NewFolder_Language"
            android:id="@+FolderBrowserDialog/btnNewFolder"
            style="@style/btn_stand"
            android:layout_marginLeft="5dp" />
        <Button
            android:text="Back_Language"
            android:id="@+FolderBrowserDialog/btnBack"
            style="@style/btn_stand"
            android:layout_marginLeft="5dp" />
        <Button
            android:text="Cancel_Language"
            android:id="@+FolderBrowserDialog/btnCancel"
            style="@style/btn_stand"
            android:layout_marginLeft="5dp"
            android:background="@drawable/cancelbuttonshape" />
    </LinearLayout>
</LinearLayout>