             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <main:InstanceAwareApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/WpfControlsTheme.xaml"/>
                <ResourceDictionary Source="Theme/PathResources.xaml"/>
                <ResourceDictionary Source="Theme/ColorsResource.xaml"/>
                <ResourceDictionary Source="Theme/LanguageAndFonts.xaml"/>
                <ResourceDictionary Source="Theme/WpfDataGridTheme.xaml"/>
                <!--<ResourceDictionary Source="Theme/PathToBitmapResources.xaml"/>-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </main:InstanceAwareApplication.Resources>
</main:InstanceAwareApplication>
